extends layout

block content
  .container
    .row
      .edit-area.col-xs-4
        h1= title
        if post
          div.well.well-sm
            h4 Post accepted:
            dl
              dd Title:
              dt.title= post.title
            dl
              dd Message:
              dt.message= post.message
            a(href='/') add more
        else
          form(method='post', role='form')
            h4 submit next form ...
            .form-goroup
              input.form-control(name='title')
            br
            .form-group
              textarea.form-control(name='message')
            button.btn.btn-success(type=submit) Submit form
      .list-area.col-xs-4
        h3 All messages
        table.table
          tr
            th Title
            th Message
          - for (var i = 0; i < all.length; i++)
            tr
              td= all[i].title
              td= all[i].message
        form(method='post')
          input(type='hidden', name='drop', value='y')
          button.btn.btn-danger(type=submit) Drop all items
